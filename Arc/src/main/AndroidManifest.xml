<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="msa.arc">

    <application
        android:name=".ArcApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".movies.MoviesActivity"
            android:label="@string/title_activity_movies"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="msa.arc.MainActivity" />
        </activity>
        <activity
            android:name=".movies.movielist.MovieListActivity"
            android:label="@string/title_activity_movie_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".movies.movierealm.MovieRealmActivity" />
    </application>

</manifest>